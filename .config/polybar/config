; colors defined using .Xresources
[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
black = ${xrdb:color0}
red = ${xrdb:color1}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}
white = ${xrdb:color7}

[bar/mybar]
wm-restack = bspwm
enable-ipc = true
fixed-center = false

width = 100%
height = 20
offset-x = 0
offset-y = 0
radius = 0.0

line-size = 2

padding = 0
module-margin-left = 0
module-margin-right = 1

font-0 = UbuntuMono Nerd Font Mono:size=11;1
font-1 = JoyPixels:scale=12:style=Regular;2

modules-left = bspwm
modules-right = pacman-pkgs cpu memory temperature wlan xkeyboard battery date

tray-position = right
tray-padding = 10
tray-background = ${colors.background}

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev
cursor-click = pointer
cursor-scroll = default

screenchange-reload = true

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; MODULES ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
label-layout = %layout%
label-layout-underline = ${colors.blue}
label-indicator-padding = 1
label-indicator-margin = 0
label-indicator-background = ${colors.red}
label-indicator-underline = ${colors.red}
format-background = ${colors.background}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-background = ${colors.blue}
label-focused-underline = ${colors.blue}
label-focused-padding = 1
label-occupied = %index%
label-occupied-padding = 1
label-occupied-foreground = ${colors.blue}
label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 1
label-empty = %index%
label-empty-foreground = ${colors.green}
label-empty-padding = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/pacman-pkgs]
type = custom/ipc
hook-0 = pacman -Qu | wc -l
;click-left = $TERMINAL -e sudo pacman -Syu
format-prefix = "ğŸ“¦ "
format-underline = ${colors.yellow}
format-background = ${colors.background}
format-padding = 1
initial = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ğŸ’» "
format-underline = ${colors.blue}
label = %percentage:2%%
format-background = ${colors.background}
format-padding = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ğŸ§  "
format-underline = ${colors.magenta}
label = %percentage_used%%
format-background = ${colors.background}
format-padding = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.magenta}
format-connected-background = ${colors.background}
format-connected-padding = 1
label-connected = ğŸ“¡ %essid%

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.red}
label-disconnected = ğŸ“¡ disconnected
label-disconnected-foreground = ${colors.red}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = ${colors.magenta}
format-connected-background = ${colors.background}
format-connected-padding = 1
format-connected-prefix = "ğŸ”Œ "
format-connected-prefix-foreground = ${colors.magenta}
label-connected = %local_ip%

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/date]
type = custom/script
interval = 30
exec = date '+%m/%d/%Y %H:%M'
label = %output%
format-prefix = "ğŸ•‘ "
format-background = ${colors.background}
format-underline = ${colors.blue}
format-padding = 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.yellow}
format-charging-background = ${colors.background}
format-charging-padding = 1

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${colors.red}
format-discharging-background = ${colors.background}
format-discharging-padding = 1


format-full-prefix = "îˆº "
format-full-prefix-foreground = ${colors.green}
format-full-underline = ${colors.green}
format-full-background = ${colors.background}
format-full-padding = 1

animation-charging-0 = âš¡
animation-charging-1 = ğŸ”‹
animation-charging-foreground = ${colors.yellow}
animation-charging-framerate = 750

animation-discharging-0 = îˆ¸
animation-discharging-1 = ğŸ”‹
animation-discharging-foreground = ${colors.red}
animation-discharging-framerate = 750

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/temperature]
type = custom/script
exec = sensors | grep CPU | awk '{print $2}'
format-underline = ${colors.red}
format-prefix = "ğŸŒ¡"
label = %output%
interval = 2
format-background = ${colors.background}
format-padding = 1

